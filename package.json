{
  "name": "qms-local-app",
  "private": true,
  "version": "1.0.0",
  "description": "EvoVP - 医療機器QMS対応の完全ローカル動作帳票管理アプリケーション",
  "author": "EvoVP Team",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "//": "==== BoltNew / Development Scripts (no native module rebuild) ====",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:app": "tsc && vite build",
    "electron:dev": "electron .",
    "//2": "==== Production Packaging (local machine only, requires C++ toolchain) ====",
    "prepackage": "rm -rf release && xattr -cr .",
    "package": "npm run build && xattr -cr . && electron-builder",
    "//3": "==== Other Scripts ====",
    "electron": "electron .",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit -p tsconfig.app.json"
  },
  "dependencies": {
    "@types/pdfkit": "^0.17.3",
    "lucide-react": "^0.344.0",
    "pdfkit": "^0.17.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}